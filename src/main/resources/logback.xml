<configuration>

    <root level="info">
        <appender class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </root>

    <logger name="com.hiwijaya.javalogging" level="debug"/>

</configuration>